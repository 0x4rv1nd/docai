server {
    listen 80;
    server_name geteverythinggpt.com www.geteverythinggpt.com;

    # Root directory for the static landing page
    root /var/www/geteverythinggpt;
    index index.html;

    # 1. Landing Page (Root)
    # Serves index.html and style.css directly from /var/www/geteverythinggpt
    location / {
        try_files $uri $uri/ =404;
    }

    # 2. DocAI Tool (FastAPI Proxy)
    # Redirect /docai (no slash) to /docai/ (with slash) to maintain relative paths
    location = /docai {
        return 301 $scheme://$http_host/docai/;
    }

    location /docai/ {
        # Proxy to the FastAPI container
        proxy_pass http://127.0.0.1:8000/;
        
        # Preserve reverse proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (if needed by FastAPI/Uvicorn)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Performance and file upload settings
        proxy_buffering off;
        client_max_body_size 100M;
        proxy_read_timeout 300s;
    }

    # 3. Handle FastAPI-specific paths
    # Because the DocAI app uses absolute paths like /static/ and /upload
    location ~ ^/(static|upload|download|health) {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Match client_max_body_size for uploads
        client_max_body_size 100M;
    }

    # Custom Error Pages
    error_page 404 /index.html;
}
